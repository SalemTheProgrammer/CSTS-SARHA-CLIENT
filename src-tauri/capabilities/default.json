{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "opener:default",
    "http:default",
    "dialog:default",
    "fs:default",
    {
      "identifier": "http:default",
      "allow": [
        {
          "url": "http://192.168.1.140/*"
        },
        {
          "url": "http://192.168.1.140"
        },
        {
          "url": "http://192.168.1.140/download*"
        },
        {
          "url": "http://localhost:*"
        }
      ]
    },
    {
      "identifier": "fs:allow-write-text-file",
      "allow": [
        {
          "path": "$DOWNLOAD/**"
        }
      ]
    }
  ]
}
