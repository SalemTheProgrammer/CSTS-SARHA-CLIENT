{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "sarha-client",
  "version": "0.1.0",
  "identifier": "com.salemtheprogrammer.sarha-client",
  "build": {
    "beforeDevCommand": "yarn start",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "yarn build",
    "frontendDist": "../dist/sarha-client/browser"
  },
  "app": {
    "windows": [
      {
        "title": "Sarha",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null,
      "assetProtocol": {
        "enable": true,
        "scope": ["**"]
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
